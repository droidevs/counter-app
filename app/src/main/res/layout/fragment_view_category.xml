<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground"
    android:padding="16dp">

    <!-- Category name -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Counters count -->
    <TextView
        android:id="@+id/tvCountersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 COUNTER"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/tvCategoryName"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryName"
        android:layout_marginTop="4dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCounters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCountersCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Counter"
        android:src="@drawable/ic_add"
        android:tint="?colorOnPrimary"
        app:backgroundTint="?colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
