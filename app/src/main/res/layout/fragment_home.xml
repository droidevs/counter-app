<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">

    <!-- ================= TOP HALF : COUNTERS ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Horizontal counters list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLastCounters"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnViewAllCounters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_all_counters" />

            <Button
                android:id="@+id/btnNewCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new_counter"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Total counters -->
        <TextView
            android:id="@+id/txtTotalCounters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_counters_0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- ================= BOTTOM HALF : CATEGORIES ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Horizontal categories list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTopCategories"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnViewAllCategories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_categories" />

            <Button
                android:id="@+id/btnCreateCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_category"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
