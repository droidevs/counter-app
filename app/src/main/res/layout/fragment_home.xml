<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?colorBackground">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- ===== RECENT COUNTERS HEADER ===== -->
    <TextView
        android:id="@+id/txtRecentCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_recent_counters_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtViewAllCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_view_all"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txtRecentCounters"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== RECENT COUNTERS LIST ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecentCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/txtRecentCounters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        android:orientation="horizontal"/>

    <!-- ===== CATEGORIES HEADER ===== -->
    <TextView
        android:id="@+id/txtCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_categories_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtViewAllCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_view_all"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txtCategories"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== CATEGORIES LIST ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/txtCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"/>

    <FrameLayout
        android:id="@+id/stateContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
