<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_category_card"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_press">

    <!-- Category name -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSecondaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Counters count -->
    <TextView
        android:id="@+id/tvCountersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 counters"
        android:textSize="13sp"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/tvCategoryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Edited time ago -->
    <TextView
        android:id="@+id/tvEditedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edited_time_ago"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:alpha="0.65"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/bg_time_badge"
        app:layout_constraintTop_toTopOf="@id/tvCountersCount"
        app:layout_constraintBottom_toBottomOf="@id/tvCountersCount"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
