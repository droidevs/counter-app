<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.CreateCounterFragment">

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Counter Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter name"
                android:textStyle="bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCounterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter counter name"
                android:inputType="text"
                android:layout_marginTop="8dp" />

            <!-- Category Chip -->
            <TextView
                android:id="@+id/tvCategoryChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_category_chip"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Counter for category: My Category" />

            <!-- Category dropdown -->
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="?android:attr/listDivider" />

            <!-- Flags -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter behavior"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Can Increase -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Allow increment" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCanIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- Can Decrease -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Allow decrement" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCanDecrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <EditText
                android:id="@+id/etInitialValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Initial counter value"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvInitialValueDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The counter will start at 0"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="?android:attr/listDivider" />

            <!-- Per-counter behavior overrides -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advanced_behavior"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchUseDefaultBehavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_global_counter_preferences"
                android:checked="true"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:id="@+id/groupBehaviorOverrides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etIncrementStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_increment_step_optional"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etDecrementStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_decrement_step_optional"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etDefaultValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_default_value_optional"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etMinValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_min_value_optional"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etMaxValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_max_value_optional"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Counter"
        android:layout_margin="16dp" />

</LinearLayout>