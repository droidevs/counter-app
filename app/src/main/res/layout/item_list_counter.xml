<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Counter Name -->
        <TextView
            android:id="@+id/tvCounterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Water Glasses"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCategory"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Category Chip -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEALTH"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_category_chip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Counter Value -->
        <TextView
            android:id="@+id/tvCounterValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/tvCounterName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Minus Button -->
        <ImageButton
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_counter_button_soft"
            android:src="@drawable/ic_minus"
            android:contentDescription="@string/minus"
            app:layout_constraintEnd_toStartOf="@id/btnPlus"
            app:layout_constraintTop_toTopOf="@id/tvCounterValue"
            app:layout_constraintBottom_toBottomOf="@id/tvCounterValue"
            android:layout_marginEnd="8dp"
            app:tint="?attr/colorPrimary" />

        <!-- Plus Button -->
        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_counter_button_primary"
            android:src="@drawable/ic_plus"
            android:contentDescription="@string/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCounterValue"
            app:layout_constraintBottom_toBottomOf="@id/tvCounterValue"
            app:tint="?attr/colorOnPrimary" />

        <!-- Updated Date -->
        <TextView
            android:id="@+id/tvEditedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edited 2h ago"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_time_badge"
            android:alpha="0.75"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCounterValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- System Counter Hint (shown only for system counters that may not work) -->
        <TextView
            android:id="@+id/tvSystemHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requires permission"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_system_hint"
            android:alpha="0.0"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCounterValue"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

