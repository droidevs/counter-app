<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="?attr/colorBackground"
    tools:context=".ui.fragments.CreateCategoryFragment">

    <!-- ================= Preview Card ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?colorSecondaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvPreviewName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPreviewCount"/>

            <TextView
                android:id="@+id/tvPreviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="@id/tvPreviewName"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNTERS"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/tvPreviewCount"
                app:layout_constraintEnd_toEndOf="@id/tvPreviewCount"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================= Category Name ================= -->
    <TextView
        android:id="@+id/labelCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardPreview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g. Health, Work, Hobbies"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/labelCategoryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================= Suggested Color ================= -->
    <TextView
        android:id="@+id/tvSuggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ¨ Suggested Color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tilCategoryName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardSuggestedColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_suggested_color"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSuggested"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/viewSuggestedColor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_color_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvUsingColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Using this color"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/viewSuggestedColor"
            app:layout_constraintTop_toTopOf="@id/viewSuggestedColor"
            app:layout_constraintEnd_toStartOf="@id/ivCheck"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Picked just for you"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="@id/tvUsingColor"
            app:layout_constraintTop_toBottomOf="@id/tvUsingColor"/>

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= Color Picker ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerColors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardSuggestedColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- ================= Create Button ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateCategory"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Create Category"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
