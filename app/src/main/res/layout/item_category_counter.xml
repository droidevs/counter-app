<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_counter_category_card"
    android:padding="16dp">

    <!-- Counter name -->
    <TextView
        android:id="@+id/tvCounterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Counter Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCounterValue"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Updated date -->
    <TextView
        android:id="@+id/tvEditedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edited 2h ago"
        android:textSize="12sp"
        android:textColor="?colorOnSurfaceVariant"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/bg_time_badge"
        android:alpha="0.75"
        app:layout_constraintStart_toStartOf="@id/tvCounterName"
        app:layout_constraintTop_toBottomOf="@id/tvCounterName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- System Counter Hint (shown only for system counters that may not work) -->
    <TextView
        android:id="@+id/tvSystemHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requires permission"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_system_hint"
        android:alpha="0.0"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/tvEditedTime"
        app:layout_constraintTop_toTopOf="@id/tvEditedTime"
        android:layout_marginStart="8dp" />

    <!-- Counter value -->
    <TextView
        android:id="@+id/tvCounterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?colorOnSurface"
        app:layout_constraintEnd_toStartOf="@id/btnMinus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- Minus button -->
    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_secondary"
        android:src="@drawable/ic_minus"
        android:contentDescription="@string/decrease"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?colorPrimary" />

    <!-- Plus button -->
    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_primary"
        android:src="@drawable/ic_plus"
        android:contentDescription="@string/increase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?colorOnPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>
