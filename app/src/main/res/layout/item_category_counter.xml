<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_counter_category_card"
    android:padding="16dp">

    <!-- Counter name -->
    <TextView
        android:id="@+id/tvCounterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Water Glasses"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCounterValue"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Updated date -->
    <TextView
        android:id="@+id/tvUpdatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated 12/20/2025"
        android:textSize="12sp"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/tvCounterName"
        app:layout_constraintTop_toBottomOf="@id/tvCounterName"/>

    <!-- Counter value -->
    <TextView
        android:id="@+id/tvCounterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?colorOnSurface"
        app:layout_constraintEnd_toStartOf="@id/btnMinus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- Minus button -->
    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_secondary"
        android:src="@drawable/ic_minus"
        android:contentDescription="Decrease"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?colorPrimary" />

    <!-- Plus button -->
    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_primary"
        android:src="@drawable/ic_plus"
        android:contentDescription="Increase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?colorOnPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>
