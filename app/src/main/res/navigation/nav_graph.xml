<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="io.droidevs.counterapp.ui.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment"/>

        <action
            android:id="@+id/action_home_to_counterList"
            app:destination="@id/counterListFragment"/>

    </fragment>

    <fragment
        android:id="@+id/counterListFragment"
        android:name="io.droidevs.counterapp.ui.CounterListFragment"
        android:label="Counters"/>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="io.droidevs.counterapp.ui.SettingsFragment"
        android:label="Settings"/>

</navigation>
